<h1>@<%= current_user.username %>'s Twitter Feed</h1>


<div class="row">
	<div class="col-md-4">
		<div class="panel panel-body">
			<% if current_user.avatar.blank? == false %>
				<%= image_tag current_user.avatar.url, class: "img-circle profile-pic"%>
			<% end %>
			<h4><%= link_to current_user.name, show_user_path(id: current_user.id) %></h4>
			<p class="text-muted">@<%= link_to current_user.username, show_user_path(id: current_user.id) %></p>
		</div>
	</div> <!-- end of sidebar -->

	<div class="col-md-8">
		<div class="panel panel-body">
			<%= render 'tweets/form', tweet: @tweet %>
		</div>

		<% @following_tweets.each do |tweet| %>
			<%= render 'a_tweet', tweet: tweet %>
		<% end %>

	</div> <!-- end of main body -->
</div> <!-- end of row -->
